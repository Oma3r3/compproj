        nav {
            height: 5rem;
            width: 100vw;
            background-color: #131418;
            box-shadow: 5px 3px 20px rgba(249, 247, 247, 0.2);
            display: flex;
            justify-content: space-between;
            position: fixed;
            z-index: 10;
            font-family: sans-serif;
            letter-spacing: 1px;
            font-weight: 300;
        }
        
        .nav-logo-head {
            display: flex;
            align-items: center;
            padding-left: 1rem;
            gap: 1.2rem;
        }
        
        .logo img {
            height: 3rem;
            filter: contrast(0) brightness(10);
        }
        
        .nav-header {
            color: #00d9ff;
            font-size: x-large;
            /* margin: 1.6rem 0.1rem; */
            font-weight: 500;
        }
        
        .nav-links {
            display: flex;
            list-style: none;
            /* width: 60vw; */
            padding: 0 0.7vw;
            justify-content: end;
            align-items: center;
            text-transform: uppercase;
        }
        
        .nav-links li a {
            color: #f2f5f7;
            text-decoration: none;
            margin: 0 0.7vw;
        }
        
        .nav-links li a:hover {
            color: #61DAFB;
        }
        
        .nav-links li {
            position: relative;
        }
        
        .nav-links li a::before {
            content: "";
            display: block;
            height: 1px;
            width: 0%;
            background-color: #61DAFB;
            position: absolute;
            transition: all ease-in-out 250ms;
            margin: 1.1rem 0 0 10%;
        }
        
        .nav-links li a:hover::before {
            width: 80%;
        }
        
        .login-button {
            color: #f2f5f7;
            background-color: transparent;
            border: 1.5px solid #f2f5f7;
            border-radius: 1.3rem;
            padding: 0.6rem 0.8rem;
            margin-left: 2vw;
            margin-right: 1.8vw;
            font-size: 1rem;
            cursor: pointer;
        }
        
        .login-button:hover {
            color: #131418;
            background-color: #f2f5f7;
            border: 1.5px solid #f2f5f7;
            transition: all ease-in-out 350ms;
        }
        
        .hamburger div {
            width: 30px;
            height: 3px;
            background: #f2f5f7;
            margin: 5px;
            transition: all 1s ease;
        }
        
        .hamburger {
            display: none;
        }
        
        .formcontainer {
            display: flex;
            justify-content: center;
            position: relative;
            top: 460px;
            /* border: 1px solid white; */
        }
    </style>
