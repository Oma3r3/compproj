<style>
    body {
        padding: 0px;
        margin: 0px;
        background-color: #00011e;
    }
    
    nav {
        height: 5rem;
        width: 100vw;
        background-color: #131418;
        box-shadow: 5px 3px 20px rgba(249, 247, 247, 0.2);
        display: flex;
        justify-content: space-between;
        position: fixed;
        z-index: 10;
        font-family: sans-serif;
        letter-spacing: 1px;
        font-weight: 300;
    }
    
    .nav-logo-head {
        display: flex;
        align-items: center;
        padding-left: 1rem;
        gap: 1.2rem;
    }
    
    .logo img {
        height: 3rem;
        filter: contrast(0) brightness(10);
    }
    
    .nav-header {
        color: #00d9ff;
        font-size: x-large;
        /* margin: 1.6rem 0.1rem; */
        font-weight: 500;
    }
    
    .nav-links {
        display: flex;
        list-style: none;
        /* width: 60vw; */
        padding: 0 0.7vw;
        justify-content: end;
        align-items: center;
        text-transform: uppercase;
    }
    
    .nav-links li a {
        color: #f2f5f7;
        text-decoration: none;
        margin: 0 0.7vw;
    }
    
    .nav-links li a:hover {
        color: #61DAFB;
    }
    
    .nav-links li {
        position: relative;
    }
    
    .nav-links li a::before {
        content: "";
        display: block;
        height: 1px;
        width: 0%;
        background-color: #61DAFB;
        position: absolute;
        transition: all ease-in-out 250ms;
        margin: 1.1rem 0 0 10%;
    }
    
    .nav-links li a:hover::before {
        width: 80%;
    }
    
    .login-button {
        color: #f2f5f7;
        background-color: transparent;
        border: 1.5px solid #f2f5f7;
        border-radius: 1.3rem;
        padding: 0.6rem 0.8rem;
        margin-left: 2vw;
        margin-right: 1.8vw;
        font-size: 1rem;
        cursor: pointer;
    }
    
    .login-button:hover {
        color: #131418;
        background-color: #f2f5f7;
        border: 1.5px solid #f2f5f7;
        transition: all ease-in-out 350ms;
    }
    
    .hamburger div {
        width: 30px;
        height: 3px;
        background: #f2f5f7;
        margin: 5px;
        transition: all 1s ease;
    }
    
    .hamburger {
        display: none;
    }
    /* ======================================================================================================================================================== */
    
    .header {
        color: white;
        display: flex;
        justify-content: center;
        position: relative;
        top: 100px;
    }
    
    .event-section {
        padding: 3vh 4vw;
        background: none;
        color: white;
        height: 100%;
        margin-top: 100px;
    }
    
    .event-form {
        border: 2px solid rgb(255, 255, 255);
        font-size: 1.2rem;
        display: flex;
        flex-direction: column;
        width: 1000px;
        align-items: start;
        padding: 10px;
        /* gap: 15px; */
    }
    
    .event-form textarea {
        resize: none;
        font-size: 1rem;
    }
    
    .event-form label {
        margin-top: 2%;
    }
    
    .event-form input {
        font-size: 1rem;
    }
    
    .event-form button {
        margin-top: 2%;
        font-size: 1rem;
        font-weight: 700;
        background-color: #5399df;
        box-shadow: 2px 2px 9px #0066ff;
        border: none;
    }
    
    .event-form button:hover {
        scale: 1.2;
        box-shadow: 2px 2px 10px #0000ff;
        transition: all 2s ease-in-out 0;
    }
    
    @media screen and (max-width: 710px) {
        nav {
            position: fixed;
            z-index: 3;
        }
        .hamburger {
            display: block;
            position: absolute;
            cursor: pointer;
            right: 5%;
            top: 50%;
            transform: translate(-5%, -50%);
            z-index: 2;
            transition: all 1s ease;
        }
        .nav-links {
            position: fixed;
            background: #131418;
            height: 30%;
            width: 100%;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
            clip-path: circle(50px at 90% -20%);
            -webkit-clip-path: circle(50px at 90% -10%);
            transition: all 1s ease-out;
            pointer-events: none;
        }
        .nav-links.open {
            clip-path: circle(1000px at 90% -10%);
            -webkit-clip-path: circle(1000px at 90% -10%);
            pointer-events: all;
        }
        .nav-links li {
            opacity: 0;
        }
        .nav-links li:nth-child(1) {
            transition: all 0.5s ease 0.3s;
        }
        .nav-links li:nth-child(2) {
            transition: all 0.5s ease 0.2s;
        }
        .nav-links li:nth-child(3) {
            transition: all 0.5s ease 0.2s;
        }
        .nav-links li:nth-child(4) {
            transition: all 0.5s ease 0.2s;
            margin-left: -0.3em;
        }
        #desc {
            height: 500px;
            width: 300px;
        }
        .event-form {
            width: auto;
        }
        /* .nav-links li:nth-child(5){
      transition: all 0.5s ease 0.1s;
  }
  .nav-links li:nth-child(6){
      transition: all 0.5s ease 0.1s;
       transform: translateX(-20%);
      margin-left: -1em;
  } */
        /* .nav-links li:nth-child(7){
      transition: all 0.5s ease 1s;
      margin: 0;
  } */
        li.fade {
            opacity: 1;
        }
    }
    
    .toggle .line1 {
        transform: rotate(-45deg) translate(-5px, 6px);
    }
    
    .toggle .line2 {
        transition: all 0.7s ease;
        width: 0;
    }
    
    .toggle .line3 {
